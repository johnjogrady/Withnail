{% extends '_base.html.twig' %}

{% block pageTitle %}
    edit users page
{% endblock %}

{% block indexNavStyle%}
    current_page
{% endblock %}

{% block main %}
    <form
            action="index.php?action=showEditUserById"
            method="POST"
    >

<table>
    <h2>User administration</h2>
    <tr>
        <th> UserId</th>
        <th> First Name</th>
        <th> Last Name</th>
        <th> Address 1</th>
        <th> Address 2</th>
        <th> Address 3</th>
        <th> County</th>
        <th> Email</th>
        <th> Mobile Number</th>
        <th> Chosen Avatar</th>
        <th> Action</th>
    </tr>
    {% for user in users %}


        <tr>
            <td> {{ user.Id}}</td>
            <td> {{ user.firstName}}</td>
            <td> {{ user.lastName}}</td>
            <td> {{ user.customerAddress1}}</td>
            <td> {{ user.customerAddress2}}</td>
            <td> {{ user.customerAddress3}}</td>
            <td> {{ user.county}}</td>
            <td> {{ user.email}}</td>
            <td> {{ user.mobileNumber}}</td>
            <td> <img class="thumbnail" src="../images/{{user.avatar}}.jpg"></td>
            <td>
                <a href="index.php?action=showEditUserById&id={{user.Id}}">Edit User</a>
                </br>
            </td>
        </tr>


    {% endfor %}
</table>

{% endblock %}