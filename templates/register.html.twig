{% extends '_base.html.twig' %}

{% block pageTitle %}
    Merchandise page
{% endblock %}

{% block registerNavStyle %}
    current_page
{% endblock %}

{% block main %}

    <div class="column_container">
        <form 		action="index.php?action=createNewCustomerAction"
                     method="POST">
            <fieldset>
                    <section class="contact info">
                        <legend>New Customer Registration</legend>
                            <label>First Name:</label>
                            <input type="text" name="firstName">
                            <label>Last Name:</label>
                            <input type="text" name="lastName">
                            <label>Address Line 1:</label>
                            <input type="text" name="addressLine1">
                            <label>Address Line 2:</label>
                            <input type="text" name="addressLine2">
                            <label>Address Line 3:</label>
                            <input type="text" name="addressLine3">
                            <label>County:</label>
                            <input type="text" name="county">
                            <label>Mobile Number:</label>
                            <input type="text" name="mobileNumber">
                </section>
                <section class="authentication info">
                     <legend>Please Enter your email and password</legend>
                     <label>Email:</label>
                     <input type="text" name="email">
                     <label>Password:</label>
                     <input type="password" name="password">
                    </br>
                    <input type="submit">
                </section>

            </fieldset>

        </form>
<nav>
    <div id="sidenav2">
    <ul>
        <li>
            <strong>Choose an avatar for your profile</strong>
        </li>
        <li>
            <img class="block" height="70" width="60" src="../images/cat.jpg" alt="cat">
            <input class="block" type="radio" name="avatar" value="cat" checked="true">

        </li>
        <li>
            <img class="block" height="70" width="60"  src="../images/dog.jpg" alt="dog">
            <input type="radio" name="avatar" value="dog">
        </li>
        <li>
            <img class="block" height="70" width="60" src="../images/pig.jpg" alt="pig">
            <input type="radio" name="avatar" value="pig">
        </li>
        <li>
            <img class="block" height="70" width="60" name="avatar" src="../images/rabbit.jpg" alt="rabbit">
            <input type="radio" name="avatar" value="rabbit">
        </li>
    </ul>
    </div>
</nav>
</div>


{% endblock %}