                <ul>
                    <li>
                        <strong>Choose an avatar for your profile</strong>
                    </li>
                    <li>
                        <img class="block" height="70" width="60" src="../images/cat.jpg" alt="cat">
                        <input class="block" type="radio" name="avatar" value="cat" checked="true">

                    </li>
                    <li>
                        <img class="block" height="70" width="60"  src="../images/dog.jpg" alt="dog">
                        <input type="radio" name="avatar" value="dog">
                    </li>
                    <li>
                        <img class="block" height="70" width="60" src="../images/pig.jpg" alt="pig">
                        <input type="radio" name="avatar" value="pig">
                    </li>
                    <li>
                        <img class="block" height="70" width="60" name="avatar" src="../images/rabbit.jpg" alt="rabbit">
                        <input type="radio" name="avatar" value="rabbit">
                    </li>
                </ul>
            </div>
            </nav>

    </div>


{% endblock %}