{% block pageTitle %}
    Edit User page
{% endblock %}

{% block indexNavStyle %}
    current_page
{% endblock %}




{% block main %}


    <div class="column_container">
        <form 		action="index.php?action=processEditUser"
                     method="POST">
            <fieldset>
                <section class="contact info">
                    <legend>Please review and update your details below</legend>
                    <input type="hidden" name="Id" value="{{user.Id}}">
                    <input type="hidden" name="password" value="{{user.password}}">
                    <label>First Name:</label>
                    <input type="text" name="firstName" value="{{user.firstName}}">
                    <label>Last Name:</label>
                    <input type="text" name="lastName" value="{{user.lastName}}">
                    <label>Address Line 1:</label>
                    <input type="text" name="addressLine1" value="{{user.customerAddress1}}">
                    <label>Address Line 2:</label>
                    <input type="text" name="addressLine2" value="{{user.customerAddress2}}">
                    <label>Address Line 3:</label>
                    <input type="text" name="addressLine3" value="{{user.customerAddress3}}">
                    <label>County:</label>
                    <input type="text" name="county" value="{{user.county}}">
                    <label>Mobile Number:</label>
                    <input type="text" name="mobileNumber" value="{{user.mobileNumber}}">
                    <label>Email:</label>
                    <input type="text" name="email" value="{{user.email}}">

                <input type="submit">
                </p>
                </section>
            </fieldset>
        </form>
            <nav>
